# StockGenie Pro - Environment Variables Template
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control!

# SmartAPI (AngelOne) Credentials
CLIENT_ID=your_client_id_here
PASSWORD=your_password_here
TOTP_SECRET=your_totp_secret_here

# API Keys
HISTORICAL_API_KEY=your_historical_api_key
TRADING_API_KEY=your_trading_api_key
MARKET_API_KEY=your_market_api_key

# Telegram Alerts
TELEGRAM_ENABLED=false
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Supabase (Paper Trading) - Optional
SUPABASE_URL=
SUPABASE_KEY=

# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_DEBUG=false

# Redis Cache (Optional - leave disabled to use in-memory cache)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_PREFIX=stockgenie:
